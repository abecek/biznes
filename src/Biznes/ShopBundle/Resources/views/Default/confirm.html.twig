{% extends "BiznesShopBundle::base.html.twig" %}
{% set title = 'Podsumowanie' %}

{% block header %}
    <header class="business-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="display-3 text-center text-white mt-4 text-bordered">Podsumowanie zamówienia</h1>
                    <img src="images/"/>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block container %}
    <div class="content">
        <div class="row">
            <div class="col-md-6">

                <div class="card-header">
                    <h4>Sprzedawca:</h4>
                </div>
                <div class="card-body">
                    <strong>Adres:</strong>
                    <div style="clear:left;">
                        ul. Przykładowa 15,
                        <br> 99-999 Łódź
                    </div>
                    <br>
                    <strong>NIP:</strong>
                    <div style="clear:left;">
                        123-456-78-90
                    </div>                     
                    <br>
                    <strong>Numer telefonu:</strong>
                    <div style="clear:left;">
                        123-456-789
                    </div>
                    <br>
                    <strong>Adres email:</strong>
                    <div style="clear:left;">
                        biuro@affiliationtools.com
                    </div>
                </div>

            </div>
            <div class="col-md-6">

                <div class="card-header">
                    <h4>Nabywca:</h4>
                </div>
                <div class="card-body">
                    <strong>Adres:</strong>
                    <div style="clear:left;">
                        ul. {{ um.userAddress.street }} 
                        {{ um.userAddress.nrHouse }}
                        {% if um.userAddress.nrFlat is not null %}
                            /{{ um.userAddress.nrFlat }}
                        {% endif %}
                        <br> {{ um.userAddress.postCode }} {{ um.userAddress.city }}
                    </div>
                    <br>
                    <strong>NIP/PESEL:</strong>
                    <div style="clear:left;">
                        {% if um.userData.identityNumber is not null %}
                            {{ um.userData.identityNumber }}
                        {% endif %}
                    </div>                     
                    <br>
                    <strong>Numer telefonu:</strong>
                    <div style="clear:left;">
                        {{ um.userData.telephone }}
                    </div>
                    <br>
                    <strong>Adres email:</strong>
                    <div style="clear:left;">
                        {{ um.user.email }}
                    </div>
                </div>

            </div>
        </div>

        <hr>

        <div class="row">  
            <div class="col-md-12">    
                
                <div style="overflow: auto;">
                    <table class="table table-striped table-bordered" style="background-color: whitesmoke;">
                        <tr>
                            <th class="">
                                Lp.
                            </th>
                            <th class="">
                                Nazwa
                            </th>
                            <th class="">
                                Cena Netto
                            </th>
                            <th class="">
                                Wartość Netto
                            </th>
                            <th class="">
                                Stawka Vat
                            </th>
                            <th class="">
                                Kwota Vat
                            </th>
                            <th class="">
                                Wartość Brutto
                            </th>
                        </tr>
                        {% for product in cart.products %}
                            <tr>
                                <td>
                                    1
                                </td>
                                <td>
                                    {{ product.name }}
                                </td>
                                <td>
                                    {{ product.price }}
                                </td>
                                <td>
                                    {{ product.price }}
                                </td>
                                <td>
                                    23%
                                </td>
                                <td>
                                    {{ product.vatValue }}
                                </td>
                                <td>
                                    {{ product.priceBrutto }}
                                </td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td colspan="2" rowspan="2" style="color: whitesmoke; background-color: grey;">
                                <h3>Razem do zapłaty: <br>{{ order.priceBrutto }} zł</h3>
                            </td>
                            <td>
                                RAZEM:
                            </td>
                            <td>
                                {{ order.priceNetto }}
                            </td>
                            <td>
                                X
                            </td>
                            <td>
                                {{ order.vatValue }}
                            </td>
                            <td>
                                {{ order.priceBrutto }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                W tym:
                            </td>
                            <td>
                                {{ order.priceNetto }}
                            </td>
                            <td>
                                23%
                            </td>
                            <td>
                                {{ order.vatValue }}
                            </td>
                            <td>
                                {{ order.priceBrutto }}
                            </td>
                        </tr>
                    </table>
                </div>
                            
            </div>
        </div>

        <hr>
                            
        <div class="row">   
            <div class="col-md-6">
                <a href="{{ path('checkout') }}" class="btn btn-lg btn-default btn-block" type="submit">Wróc do zamówienia!</a> 
            </div>
            <div class="col-md-6">
                <form class="form" method="POST">
                    <input type="hidden" name="action" id="action" value="payment"/>
                    <input type="hidden" name="paymentMethod" id="payment" value="{{ paymentMethod }}"/>
                    <input type="hidden" name="realizationMethod" id="realization" value="{{ realizationMethod }}"/>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Zapłać teraz!</button>       
                </form>
            </div>
        </div>
        {#
        <div class="row">  
            <div class="col">
                <hr>
                {{ dump(order) }}
                <hr>
                {{ dump(cart) }}
                <hr>
                {{ dump(products) }}
                <hr>
                $products
                {{ dump(um) }}
                <hr>
            </div>
        </div>
        #}
    </div>
{% endblock %}

{% block footer %}
    <footer class="py-3 bg-dark fixed-bottom">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2017</p>
        </div>
    </footer>
{% endblock %}
