{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product</h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ product.version }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ product.rating }}</td>
            </tr>
            <tr>
                <th>Idproduct</th>
                <td>{{ product.idProduct }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('products_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
